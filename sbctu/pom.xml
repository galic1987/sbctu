<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>tuwien.sbctu</groupId>
	<artifactId>sbctu</artifactId>
	<packaging>jar</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>sbctu</name>
	<url>http://maven.apache.org</url>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>


		<dependency>
			<groupId>org.mozartspaces</groupId>
			<artifactId>mozartspaces-runtime</artifactId>
			<version>2.1-SNAPSHOT</version>
			<scope>system</scope>
			<systemPath>${basedir}/libs/mozartspaces-dist-2.1-SNAPSHOT-r11986-all-with-dependencies.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>com.miglayout</groupId>
			<artifactId>miglayout</artifactId>
			<version>3.7.4</version>
		</dependency>
  </dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>exec-maven-plugin</artifactId>
					<version>1.1</version>


					<executions>
						<execution>
						        <id>my-validation-two</id>
						
							<phase>ivo</phase>  
							<goals>
								<goal>java</goal>
							</goals>
							<configuration>
								<executable>java</executable>
								<mainClass>tuwien.sbctu.App</mainClass>
								<arguments>
									<argument>App</argument>
								</arguments>
							</configuration>
						</execution>
						
					</executions>


				</plugin>





			</plugins>
		</pluginManagement>

	</build>

</project>
